@model FoodLabellingSystem_Service.Auth.AuthMVC.Models.EmailModel

@{
    ViewData["Title"] = "ConfirmEmail";
}

<h1>ConfirmEmail</h1>

<h4>EmailModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivationCode" class="control-label"></label>
                <input asp-for="ActivationCode" class="form-control" />
                <span asp-validation-for="ActivationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Activate" class="btn btn-primary" />
            </div>
            
        </form>
        <form asp-action="ConfirmEmail" asp-route-resend="true">
             <div class="form-group">
                <input type="submit" value="New Code" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

