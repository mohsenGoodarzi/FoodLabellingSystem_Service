@model FoodLabellingSystem_Service.Models.IngredientType

<div class="container push-down box-shadow">
    <h1>Create a new Ingredient group</h1>
    <hr />
    <form asp-action="Create">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IngredientTypeId" class="control-label">Ingredient Group</label>
                    <input asp-for="IngredientTypeId" class="form-control" />
                    <span asp-validation-for="IngredientTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Member" class="control-label"></label>
                    <select asp-for="Member" class="form-control" asp-items="ViewBag.Member"></select>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-2 col-md-3 col-sm-3 col-6">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-primary ">Back</a>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-3 col-6">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary float-right" />
                </div>
            </div>
           
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
