@model FoodLabellingSystem_Service.Models.Warning
<div class="container push-down box-shadow">
    <h1>Add a new warning</h1>
    <hr />
    <form asp-action="Create">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-6">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="WarningId" class="control-label">Warning Name</label>
                    <input asp-for="WarningId" class="form-control" />
                    <span asp-validation-for="WarningId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WarningType" class="control-label">Warning Type</label>
                    <select asp-for="WarningType" class="form-control" asp-items="ViewBag.WarningType"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>

                    <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-2 col-md-3 col-sm-3 col-6">
                <div class="form-group">
                    <button asp-action="Index" class="btn btn-outline-primary ">Back</button>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-3 col-6">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary float-right" />
                </div>
            </div>

        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
